<Window x:Class="Transcript001.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Transcript001"
        mc:Ignorable="d"
        Title="Transcript001" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Button Content="Load JSON" Click="LoadJson_Click" Margin="0,0,10,0"/>
            <Button Content="Process Videos" Click="ProcessVideos_Click" Margin="0,0,10,0"/>
            <TextBlock x:Name="StatusText" VerticalAlignment="Center"/>
        </StackPanel>

        <TextBox x:Name="LogTextBox" Grid.Row="1" Margin="10" IsReadOnly="True" VerticalScrollBarVisibility="Auto"/>

        <ProgressBar x:Name="ProgressBar" Grid.Row="2" Height="20" Margin="10"/>
    </Grid>
</Window>