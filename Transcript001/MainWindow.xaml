<Window x:Class="Transcript001.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Video Transcript Processor" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="UrlTextBox" Grid.Row="0" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
        <ComboBox x:Name="FormatComboBox" Grid.Row="1" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Left" Width="200">
            <ComboBoxItem Content="Plain Text" IsSelected="True"/>
            <ComboBoxItem Content="Time-stamped Text"/>
            <ComboBoxItem Content="YouTube Original"/>
        </ComboBox>
        <Button Content="Process Video" Click="ProcessVideo_Click" Grid.Row="2" Margin="10" Padding="10,5"/>
        <TextBox x:Name="LogTextBox" Grid.Row="3" Margin="10" IsReadOnly="True" VerticalScrollBarVisibility="Auto"/>
        <ProgressBar x:Name="ProgressBar" Grid.Row="4" Height="20" Margin="10"/>
        <TextBlock x:Name="StatusText" Grid.Row="4" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>